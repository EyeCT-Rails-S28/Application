
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("AddOne", "Maintenance"))
        { 
        <div class="form-group">
            <label for="jobSize">Grootte beurt:</label>
            <select class="form-control" name="jobSize" id="jobSize">
                <option value="big">Groot</option>
                <option value="small">Klein</option>
            </select>
        </div>

        <div class="form-group">
            <label for="user">User: </label>
            <input type="text" class="form-control" name="user" id="user">
        </div>
        <div class="form-group">
            <label for="tramId">Tram ID: </label>
            <input type="text" class="form-control" name="tramId" id="tramId">
        </div>
        <div class="form-group">
            <label for="date">Datum: </label>
            <input type="text" class="form-control" name="date" id="date">
        </div>

        <button type="submit" class="btn btn-default">Enkel</button>
        }
    </div>

    <div class="col-md-6">
        @using (Html.BeginForm("AddMore", "Maintenance"))
        {
            <div class="form-group">
                <label for="jobSize">Grootte beurt:</label>
                <select class="form-control" name="jobSize" id="jobSize">
                    <option value="big">Groot</option>
                    <option value="small">Klein</option>
                </select>
            </div>
            <div class="form-group">
                <label for="user">User: </label>
                <input type="text" class="form-control" name="user" id="user">
            </div>
            <div class="form-group">
                <label for="tramId">Tram ID: </label>
                <input type="text" class="form-control" name="tramId" id="tramId">
            </div>
            <div class="form-group">
                <label for="date">Datum: </label>
                <input type="text" class="form-control" name="date" id="date">
            </div>
            <div class="form-group">
                <label for="endDate">Eind datum: </label>
                <input type="text" class="form-control" name="endDate" id="endDate">
            </div>
            <div class="form-group">
                <label for="interval">Interval (Dagen): </label>
                <input type="text" class="form-control" name="interval" id="interval">
            </div>
            <button type="submit" class="btn btn-default">Meerdere</button>
        }
        
    </div>
</div>