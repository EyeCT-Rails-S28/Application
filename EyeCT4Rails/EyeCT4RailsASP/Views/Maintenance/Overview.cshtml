@using EyeCT4RailsLib.Classes

@{
    ViewBag.Title = "Reparatie Overzicht";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-default" href="Add" role="button">Beurt toevoegen</a>
    </div>
    <br />
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Tramnummer</th>
                <th>Soort</th>
                <th>Type Beurt</th>
                <th>Reparatie Datum</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            @foreach (Job job in ViewBag.jobs)
            {
                <tr>
                    <td><a href="HistoryOfJob?tramId=@job.Tram.Id">@job.Id</a></td>
                    <td>@job.Tram.Id</td>
                    <td>@job.JobSize</td>
                    <td>@job.JobType.ToString()</td>
                    <td>@job.Date.ToString()</td>
                    <td><a class="btn btn-primary" href="ChangeToDone?jobId=@job.Id" role="button">Afronden</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


